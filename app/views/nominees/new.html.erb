 <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
  <header class="main-header">
    <%= render 'layouts/header'%>
   </header>

  <!-- =============================================== -->

  <!-- Left side column. contains the sidebar -->
  <aside class="main-sidebar">
  <%= render 'layouts/select_side_bar' %>
  </aside>

  <!-- =============================================== -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Add Nominees
      </h1>
    </section>

    <section class="content">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">
            you can add new nominees here...
          </h3>
        </div>
        <div class="box-body">
           <div class="register-box-body">
             <div class="row">
                <div class="col-md-7">
                  <%= form_for(@nominee, html: {id: "nominee_form"}, url: nominees_path(id: :category_id)) do |f| %>
                    <%#= render 'category_error' %>
                    <div class="form-group has-feedback">
                      Select category
                      <%= select_tag(:category_id, options_for_select(@categories),include_blank:true)%>
                    </div>
                    <div class="form-group has-feedback">
                      <%= f.text_field :name, placeholder: "Nominee name", class:"form-control" %>
                    </div>
                    <div class="form-group has-feedback">
                      <%= f.file_field :picture%>
                    </div>
                     <div class="form-group has-feedback">
                        <%= f.text_area :description, size: "24x6", class:"form-control", placeholder: "Description"%>
                    </div>
                    <div>
                      <%= f.submit "ADD NOMINEE", class: "btn btn-primary btn-block btn-flat" %>
                    </div>
                  <% end %>
                </div>
                <div class="col-md-5">
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      </div>

  <footer class="main-footer">
    <%= render 'layouts/footer'%>
  </footer>
</div>
</body>
