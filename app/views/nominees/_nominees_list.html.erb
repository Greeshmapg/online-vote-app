


<% @nominees.each do|nominee| %>

<div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= nominee.name %></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">    <%= image_tag nominee.picture.url, size: "150x100"  %></label>

                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1"><%= nominee.description %></label>

                </div>
                <div class="form-group">
                  <label for="exampleInputFile">Total Votes :<%= nominee.vote_count(@category) %></label>


                </div>

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
               <p class="card-text"><%= link_to 'Delete', remove_nominee_category_path(@category,nominee_id: nominee.id), method: :delete,  data: { confirm: "You sure?" } %></p>
              </div>
            </form>
          </div>
<% end %>
