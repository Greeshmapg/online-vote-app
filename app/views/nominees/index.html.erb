  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <%= render 'layouts/footer'%>
  </footer>


</body>
<script>
$('#category_id').change( function(){
$.ajax({
    url: "/nominee_list", type: "GET", data : { category: $(this).val()}
  });

});
</script>

