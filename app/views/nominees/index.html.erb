 <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
  <header class="main-header">
    <%= render 'layouts/header'%>
  </header>

  <aside class="main-sidebar">
    <%= render 'layouts/side_bar'%>
  </aside>

  <div class="content-wrapper" style="min-height:84vh;">
    <section class="content-header">
      <h1>
        View Nominees
      </h1>
    </section>

    <section class="content">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">
            <%= form_for(@category) do |f| %>
            Select category<%= f.select(:id, @categories.all.collect {|p| [ p.name, p.id ]}, class: "form-control", include_blank:true)  %>
          </h3>
        </div>
        <div class="box-body">
          <div id="nominees">
          </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>



  <footer class="main-footer">
    <%= render 'layouts/footer'%>
  </footer>

</div>
</body>
<script>
$('#category_id').change( function(){
$.ajax({
    url: "/nominee_list", type: "GET", data : { category: $(this).val()}
  });

});
</script>

