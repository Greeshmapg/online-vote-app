 <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
  <header class="main-header">
    <%= render 'layouts/header'%>
   </header>

  <!-- =============================================== -->

  <!-- Left side column. contains the sidebar -->
  <aside class="main-sidebar">
    <%= render 'layouts/side_bar'%>
  </aside>

  <!-- =============================================== -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <section class="content-header">
      <h1>
       Edit Category
      </h1>
    </section>

    <section class="content">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">You can edit category here...</h3>
        </div>
        <div class="box-body">
            <div class="register-box-body">
              <%= form_for(@category, html: {id: "category_form"}) do |f| %>
                <div id="error_div">
                </div>
                <div class="form-group has-feedback">
                  <%= f.text_field :name, placeholder: "Category name", class:"form-control", value: @category.name %>
                </div>
                <div class="form-group has-feedback">
                  <%= f.datetime_select :end_date, class: "datepicker", placeholder: "End date"%>
                </div>
                <div class="form-group has-feedback">
                  <%= f.text_area :description, size: "24x6", class:"form-control", placeholder: "Description"%>
                </div>
                <div>
                  <%= f.submit "UPDATE CATEGORY", class: "btn btn-primary btn-block btn-flat" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </section>
    </div>


  <footer class="main-footer">
    <%= render 'layouts/footer'%>
  </footer>
</div>
</body>

