<% if !@category.active? %>
  <div class="row">
    <div class="col-md-4">
    </div>
     <div class="col-md-4">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">WINNER !!!</h3>
        </div>
        <div class="row">
          <% @winners.each do |winner| %>
            <div class="col-md-6">
              <%= image_tag winner.picture.url, size: "150x100"  %>
              <div class="card-block">
                <h4 class="card-title"><%= winner.name%></h4>
                <h4 class="card-title">Total Votes : <%= winner.vote_count(@category)%></h4>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-md-4">
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h2> Voting Going On !!!</h2>
<% end %>
