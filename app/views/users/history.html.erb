<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <header class="main-header">
      <%= render 'layouts/header' %>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
      <%= render 'layouts/select_side_bar' %>
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height:84vh;">
      <section class="content-header">
        <h1>
          Welcome <%= current_user.full_name %>
        </h1>
      </section>

      <section class="content container-fluid">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Category</th>
              <th>Voted for</th>
              <th>Voted_at</th>
            </tr>
          </thead>
          <tbody>
            <% @votes.each do|vote| %>
            <tr class="info">
            <td><%= Category.get_category_name(vote.category_id) %></td>
             <td><%= Nominee.get_nominee_name(vote.nominee_id) %></td>
            <td><%=vote.created_at.strftime(" %B %d %Y at %T:%M %p") %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    </div>

    <footer class="main-footer">
       <%= render 'layouts/footer' %>
    </footer>
  </div>
</body>



