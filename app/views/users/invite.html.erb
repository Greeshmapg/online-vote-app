 <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
  <header class="main-header">
    <%= render 'layouts/header'%>
   </header>

  <!-- Left side column. contains the sidebar -->
  <aside class="main-sidebar">
  <%= render 'layouts/select_side_bar' %>
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper" style="min-height:84vh;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Invite Members
      </h1>
    </section>

    <section class="content">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">
            you can invite new members to this site...
          </h3>
        </div>
        <div class="box-body">
          <%= form_for(@user,url: invite_user_users_path,validate: true, html: {id: "invite_form"}) do |f| %>
            <div class="form-group has-feedback">
              <%= f.email_field :email, placeholder: "Enter email id", class:"form-control", validate: true %>
            </div>
            <%= f.submit "Invite", class:"btn btn-primary btn-block btn-flat" %>
          <% end %>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<div class='clearfix'></div>
  <footer class="main-footer" style=" min-height: 70vh%;";>
    <%= render 'layouts/footer'%>
  </footer>

</div>
</body>
